<h1>Listing songs</h1>

<table>
  <tr>
    <th>Release</th>
    <th>Songname</th>
    <th>Mp3file</th>
    <th>Track length</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.release_id %></td>
    <td><%= song.songname %></td>
    <td><%= song.mp3file %></td>
    <td><%= song.track_length %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

